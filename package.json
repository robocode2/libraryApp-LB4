{
  "name": "library",
  "version": "0.0.1",
  "description": "create books and book lists",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": "14 || 16 || 18 || 19"
  },
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "lint": "npm run eslint && npm run prettier:check",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run rebuild",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "docker:build": "docker build -t library .",
    "docker:run": "docker run -p 3000:3000 -d library",
    "premigrate": "npm run build",
    "migrate": "node ./dist/migrate",
    "preopenapi-spec": "npm run build",
    "openapi-spec": "node ./dist/openapi-spec",
    "prestart": "npm run rebuild",
    "start": "node -r source-map-support/register .",
    "clean": "lb-clean dist *.tsbuildinfo .eslintcache",
    "rebuild": "npm run clean && npm run build",
    "test": "cross-env-shell NODE_ENV=test \"npm run clean && npm run build && lb-mocha --allow-console-logs --exit \"dist/__tests__\"\"",
    "test:lb4:integration": "cross-env DB_SCHEMA=cultivation-planning-test NODE_ENV=test mocha -r dotenv/config \"dist/__tests__/integration/**/*.js\"",
    "test:lb4:unit": "cross-env DB_SCHEMA=cultivation-planning-test NODE_ENV=test mocha -r dotenv/config \"dist/__tests__/unit/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "robocode2 <rabie.abbas@code.berlin>",
  "license": "",
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/authentication": "^10.1.3",
    "@loopback/authentication-jwt": "^0.14.3",
    "@loopback/authorization": "^0.14.3",
    "@loopback/boot": "^6.1.3",
    "@loopback/core": "^5.1.3",
    "@loopback/repository": "^6.1.3",
    "@loopback/rest": "^13.1.3",
    "@loopback/rest-explorer": "^6.1.3",
    "@loopback/security": "^0.10.3",
    "@loopback/service-proxy": "^6.1.3",
    "dotenv": "^16.4.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^8.5.1",
    "loopback-connector-postgresql": "^6.0.9"
  },
  "devDependencies": {
    "@loopback/build": "^9.0.9",
    "@loopback/eslint-config": "^13.0.9",
    "@loopback/testlab": "^5.0.10",
    "@types/chai": "^4.3.11",
    "@types/chai-as-promised": "^7.1.8",
    "@types/chai-subset": "^1.3.5",
    "@types/node": "^14.18.36",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "deep-equal-in-any-order": "^2.0.6",
    "eslint": "^8.35.0",
    "express-mysql-session": "^3.0.0",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "mocha": "^10.2.0",
    "sinon": "^16.1.0",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "typescript": "~4.9.4"
  }
}
